<%= form_tag results_path, {:method => "get"} do %>
    <p>
      <%= label_tag :都道府県 %><br>
      <%= text_field_tag :prefecture ,params[:prefecture] %>
    </p>

    <p>
      <%= submit_tag :検索 %>
    </p>

<% end %>


<%= form_tag results_path, {:method => "get"} do %>
    <p>
      <%= label_tag :郵便番号 %><br>
      <%= text_field_tag :code ,params[:code] %>
    </p>
    <p>
      <%= submit_tag :検索 %>
    </p>

<% end %>
<% if @results.present? %>
    <hr>
    <table class="table table-striped">
      <tr><th>郵便番号</th><th>都道府県</th><th>市町村</th><th>町域</th></tr>
      <% @results.each do |r| %>
          <tr>
            <td><%= link_to r.code, result_path(r) %></td>
            <td><%= r.prefecture %></td>
            <td><%= r.city %></td>
            <td><%= r.area %></td>
          </tr>
      <% end %>
    </table>
<% end %>
