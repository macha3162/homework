<div class="page-header">
  <h1>検索結果
    <small>〒<%= params[:code] %></small>
  </h1>
</div>

<div clas="col-md-4">
  <%= form_tag results_path, {:method => "get", class: 'form-inline'} do %>
      <div class="form-group">
        <p>

          <%= label_tag :都道府県 %><br>
          <%= text_field_tag :prefecture, params[:prefecture], class: "form-control", placeholder: "例:東京都" %>
        </p>

        <p>
          <%= submit_tag :検索, class: "btn btn-info" %>
        </p>
      </div>
  <% end %>


  <%= form_tag results_path, {:method => "get", class: 'form-inline'} do %>

      <div class="form-group">
        <p>
          <label for="exampleInputEmail1">郵便番号</label><br/>
          <%= text_field_tag :code, params[:code], class: "form-control ", placeholder: "0000000(半角数字)" %>
        </p>

        <p>
          <%= submit_tag :検索, class: "btn btn-info" %>
        </p>
      </div>

  <% end %>

</div>
<% if @results.present? %>
    <hr>
    <table class="table table-striped table-bordered">
      <tr class="success">
        <th>郵便番号</th>
        <th>都道府県</th>
        <th>市町村</th>
        <th>町域</th>
      </tr>
      <% @results.each do |r| %>
          <tr>
            <td><%= link_to r.code, result_path(r) %></td>
            <td><%= r.prefecture %></td>
            <td><%= r.city %></td>
            <td><%= r.area %></td>
          </tr>
      <% end %>
    </table>
<% end %>
